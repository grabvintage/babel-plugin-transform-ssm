{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["ES2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2015",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "importsNotUsedAsValues": "error",
    "declaration": true
  },
  "include": ["./**/*.ts"],
}
